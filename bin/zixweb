#!/bin/bash

# 检查环境变量是否设置
if [ ! -n "$ZIXWEB_HOME" ]; then 
    echo runall failed  
    echo with ZIXWEB_HOME is not set
    exit 1;
fi 

memcached=${ZIXWEB_HOME}/script/memcached.pid
hypnotoad=${ZIXWEB_HOME}/script/hypnotoad.pid

case $1 in
start) 
    if [ -f "$memcached" ]; then
        $0 status
        exit 1;
    fi
    if [ -f "$hypnotoad" ]; then
        $0 status
        exit 1;
    fi
    # 启动memcached
    memcached -p $MEM_PORT -m 64m -P $ZIXWEB_HOME/script/memcached.pid -d
    # 用hypnotoad启动zixweb
    hypnotoad $ZIXWEB_HOME/script/zixweb
    $0 status
    exit 0
    ;;
stop)
    if [ -f "$memcached" ]; then
        kill `cat $memcached`
        rm $memcached
        echo memcached stoped
    fi
    if [ -f "$hypnotoad" ]; then
        kill `cat $hypnotoad`
        echo zixweb stoped
    fi
    exit 0
    ;;
status)
    if [ -f "$memcached" ]; then
        echo "memcached run at "`cat $memcached`
    fi
    if [ -f "$hypnotoad" ]; then
        echo "zixweb run at "`cat $hypnotoad`
    fi
    exit 0
    ;;
archive)
    cd $ZIXWEB_HOME
    temp=${3:-zixweb}.tar
    git archive ${2:-master} --format tar -o $ZIXWEB_HOME/tar/${temp}
    cd $ZIXWEB_HOME/tar
    tar -uf ${temp} ../public -h
    echo archive file succeed ${temp}
    exit 0
    ;;
restart)
    $0 stop
    $0 start
    exit 0
    ;;
*)
    echo "Usage: $0 {start|stop|restart|status|archive}"
    exit 0
esac


